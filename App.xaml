<Application x:Class="CarRentalManagment.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:CarRentalManagment.ViewModels"
             xmlns:views="clr-namespace:CarRentalManagment.Views"
             xmlns:adminViews="clr-namespace:CarRentalManagment.Views.Admin">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Themes/LightTheme.xaml" />
                <ResourceDictionary Source="Resources/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewModels:LoginSignupViewModel}">
                <views:LoginSignupView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModels:LoginViewModel}">
                <views:LoginView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModels:SignupViewModel}">
                <views:SignupView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModels:MainViewModel}">
                <views:MainView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModels:VehiclesViewModel}">
                <views:VehiclesView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModels:VehicleListViewModel}">
                <views:VehicleListView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModels:VehicleDetailsViewModel}">
                <views:VehicleDetailsView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModels:ReservationsViewModel}">
                <views:ReservationsView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModels:FeedbackViewModel}">
                <views:FeedbackView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModels:ReportViolationViewModel}">
                <views:ViolationReportView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModels:SettingsViewModel}">
                <views:SettingsView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModels:AdminVehicleManagementViewModel}">
                <adminViews:AdminVehicleManagementView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModels:AdminReservationManagementViewModel}">
                <adminViews:AdminReservationManagementView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModels:AdminLocationManagementViewModel}">
                <adminViews:AdminLocationManagementView />
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModels:AdminDiscountManagementViewModel}">
                <adminViews:AdminDiscountManagementView />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
