<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Core palette translated from the web project (Tailwind design system) -->
    <Color x:Key="PrimaryColor">#FF6366F1</Color>
    <Color x:Key="PrimaryHoverColor">#FF4F46E5</Color>
    <Color x:Key="PrimaryForegroundColor">#FFFFFFFF</Color>

    <Color x:Key="SecondaryColor">#FFF59E0B</Color>
    <Color x:Key="SecondaryForegroundColor">#FF0B1120</Color>

    <Color x:Key="AccentColor">#FF38BDF8</Color>
    <Color x:Key="AccentForegroundColor">#FF0B1120</Color>

    <Color x:Key="DestructiveColor">#FFEF4444</Color>
    <Color x:Key="DestructiveForegroundColor">#FF0B1120</Color>

    <Color x:Key="BackgroundColor">#FF0B1120</Color>
    <Color x:Key="ForegroundColor">#FFE2E8F0</Color>

    <Color x:Key="MutedBackgroundColor">#FF111C34</Color>
    <Color x:Key="MutedForegroundColor">#FF94A3B8</Color>

    <Color x:Key="CardBackgroundColor">#FF111C34</Color>
    <Color x:Key="CardForegroundColor">#FFE2E8F0</Color>
    <Color x:Key="CardAltBackgroundColor">#FF1C2540</Color>

    <Color x:Key="BorderColor">#FF1F2A40</Color>
    <Color x:Key="DividerColor">#FF243049</Color>
    <Color x:Key="InputBackgroundColor">#FF0F172A</Color>
    <Color x:Key="InputBorderColor">#FF2D3B55</Color>
    <Color x:Key="InputForegroundColor">#FFE2E8F0</Color>

    <Color x:Key="SidebarBackgroundColor">#FF0B1322</Color>
    <Color x:Key="SidebarForegroundColor">#FF94A3B8</Color>
    <Color x:Key="SidebarAccentColor">#FF1F2A40</Color>
    <Color x:Key="SidebarBorderColor">#FF1F2A40</Color>
    <Color x:Key="SidebarActiveColor">#FF2563EB</Color>
    <Color x:Key="SidebarActiveForegroundColor">#FFFFFFFF</Color>

    <Color x:Key="NavbarBackgroundColor">#FF0B1120</Color>
    <Color x:Key="NavbarBorderColor">#FF1F2A40</Color>

    <Color x:Key="OverlayColor">#B30B1322</Color>

    <Color x:Key="SuccessColor">#FF22C55E</Color>
    <Color x:Key="WarningColor">#FFF59E0B</Color>
    <Color x:Key="ErrorColor">#FFEF4444</Color>
    <Color x:Key="InfoColor">#FF3B82F6</Color>

    <!-- Primary resources -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource PrimaryHoverColor}" />
    <SolidColorBrush x:Key="PrimaryForegroundBrush" Color="{StaticResource PrimaryForegroundColor}" />

    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}" />
    <SolidColorBrush x:Key="SecondaryForegroundBrush" Color="{StaticResource SecondaryForegroundColor}" />

    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="AccentForegroundBrush" Color="{StaticResource AccentForegroundColor}" />

    <SolidColorBrush x:Key="DestructiveBrush" Color="{StaticResource DestructiveColor}" />
    <SolidColorBrush x:Key="DestructiveForegroundBrush" Color="{StaticResource DestructiveForegroundColor}" />

    <!-- Surface and text -->
    <SolidColorBrush x:Key="PageBackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}" />
    <SolidColorBrush x:Key="MutedBackgroundBrush" Color="{StaticResource MutedBackgroundColor}" />
    <SolidColorBrush x:Key="MutedForegroundBrush" Color="{StaticResource MutedForegroundColor}" />
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource ForegroundColor}" />
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource MutedForegroundColor}" />

    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackgroundColor}" />
    <SolidColorBrush x:Key="CardForegroundBrush" Color="{StaticResource CardForegroundColor}" />
    <SolidColorBrush x:Key="CardAltBackgroundBrush" Color="{StaticResource CardAltBackgroundColor}" />

    <!-- Structural surfaces -->
    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="{StaticResource SidebarBackgroundColor}" />
    <SolidColorBrush x:Key="SidebarForegroundBrush" Color="{StaticResource SidebarForegroundColor}" />
    <SolidColorBrush x:Key="SidebarAccentBrush" Color="{StaticResource SidebarAccentColor}" />
    <SolidColorBrush x:Key="SidebarBorderBrush" Color="{StaticResource SidebarBorderColor}" />
    <SolidColorBrush x:Key="SidebarActiveBrush" Color="{StaticResource SidebarActiveColor}" />
    <SolidColorBrush x:Key="SidebarActiveForegroundBrush" Color="{StaticResource SidebarActiveForegroundColor}" />

    <SolidColorBrush x:Key="MenuBackgroundBrush" Color="{StaticResource SidebarBackgroundColor}" />
    <SolidColorBrush x:Key="MenuForegroundBrush" Color="{StaticResource SidebarForegroundColor}" />
    <SolidColorBrush x:Key="MenuSeparatorBrush" Color="{StaticResource SidebarBorderColor}" />

    <SolidColorBrush x:Key="NavbarBackgroundBrush" Color="{StaticResource NavbarBackgroundColor}" />
    <SolidColorBrush x:Key="NavbarBorderBrush" Color="{StaticResource NavbarBorderColor}" />

    <SolidColorBrush x:Key="OverlayBrush" Color="{StaticResource OverlayColor}" />

    <!-- Inputs -->
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="{StaticResource InputBackgroundColor}" />
    <SolidColorBrush x:Key="InputForegroundBrush" Color="{StaticResource InputForegroundColor}" />
    <SolidColorBrush x:Key="InputBorderBrush" Color="{StaticResource InputBorderColor}" />

    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />
    <SolidColorBrush x:Key="DividerBrush" Color="{StaticResource DividerColor}" />

    <!-- Status -->
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}" />
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}" />
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}" />
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}" />

    <!-- Decorative -->
    <LinearGradientBrush x:Key="PrimaryGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF4F46E5" Offset="0" />
        <GradientStop Color="#FF6366F1" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="AccentGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF38BDF8" Offset="0" />
        <GradientStop Color="#FF0EA5E9" Offset="1" />
    </LinearGradientBrush>
</ResourceDictionary>
