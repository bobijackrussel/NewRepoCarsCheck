<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Shared typography -->
    <FontFamily x:Key="HeadingFontFamily">Segoe UI Semibold</FontFamily>
    <FontFamily x:Key="BodyFontFamily">Segoe UI</FontFamily>

    <!-- Corner radii must be CornerRadius, not Double -->
    <CornerRadius x:Key="CornerRadiusSmall">6</CornerRadius>
    <CornerRadius x:Key="CornerRadiusMedium">12</CornerRadius>
    <CornerRadius x:Key="CornerRadiusLarge">20</CornerRadius>

    <!-- Spacing as doubles is fine; only use them where a Double is expected -->
    <sys:Double x:Key="SpacingSmall">8</sys:Double>
    <sys:Double x:Key="SpacingMedium">16</sys:Double>
    <sys:Double x:Key="SpacingLarge">24</sys:Double>

    <!-- Shadow effects -->
    <DropShadowEffect x:Key="CardShadowEffect"
                      BlurRadius="18"
                      ShadowDepth="4"
                      Opacity="0.18"
                      Color="#550D40A5" />

    <DropShadowEffect x:Key="ElevatedShadowEffect"
                      BlurRadius="28"
                      ShadowDepth="6"
                      Opacity="0.22"
                      Color="#441D4ED8" />
</ResourceDictionary>
