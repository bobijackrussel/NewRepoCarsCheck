<UserControl x:Name="RootVehicleList" x:Class="CarRentalManagment.Views.VehicleListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:CarRentalManagment.Utilities.Converters"
             mc:Ignorable="d"
             d:DesignHeight="900"
             d:DesignWidth="1400"
             Background="#FF1A1D2E">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <conv:StringNullOrEmptyToVisibilityConverter x:Key="StringNullToVisibilityConverter" />
        <conv:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />

        <!-- Vehicle Card Style -->
        <Style x:Key="VehicleCard" TargetType="Border">
            <Setter Property="Background" Value="#FF252941" />
            <Setter Property="CornerRadius" Value="16" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Margin" Value="0,0,20,20" />
        </Style>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF4F6EFF" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="24,14" />
            <Setter Property="FontSize" Value="15" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF5F7EFF" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Filter Button Style -->
        <Style x:Key="FilterButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#FF2A2F47" />
            <Setter Property="Padding" Value="20,12" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF323757" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <!-- Main Content -->
        <ScrollViewer Grid.Column="0" 
                      VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="40,30,40,30">
            <StackPanel>
                <!-- Header Section -->
                <StackPanel Margin="0,0,0,32">
                    <TextBlock Text="Browse Vehicles"
                               FontSize="36"
                               FontWeight="Bold"
                               Foreground="White" />
                    <TextBlock Text="Find the perfect car for your journey"
                               FontSize="16"
                               Foreground="#FF9BA3B4"
                               Margin="0,8,0,0" />
                </StackPanel>

                <!-- Search and Filter Bar -->
                <Grid Margin="0,0,0,32">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Search Box -->
                    <Border Background="#FF252941"
                            CornerRadius="12"
                            Height="50"
                            Margin="0,0,16,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="&#xE721;"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="18"
                                       Foreground="#FF6B7280"
                                       VerticalAlignment="Center"
                                       Margin="20,0,12,0" />

                            <TextBox Grid.Column="1"
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     Foreground="White"
                                     FontSize="15"
                                     VerticalContentAlignment="Center"
                                     CaretBrush="White">
                                <TextBox.Resources>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <Border Background="{TemplateBinding Background}"
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}">
                                                        <ScrollViewer x:Name="PART_ContentHost" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <VisualBrush Stretch="None">
                                                            <VisualBrush.Visual>
                                                                <TextBlock Text="Search by make or model..."
                                                                           Foreground="#FF6B7280"
                                                                           FontSize="15" />
                                                            </VisualBrush.Visual>
                                                        </VisualBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>

                            <Button Grid.Column="2"
                                    Content="&#xE894;"
                                    FontFamily="Segoe MDL2 Assets"
                                    Command="{Binding ClearSearchCommand}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="#FF6B7280"
                                    FontSize="14"
                                    Visibility="{Binding SearchText, Converter={StaticResource StringNullToVisibilityConverter}}"
                                    Margin="0,0,12,0"
                                    Cursor="Hand" />
                        </Grid>
                    </Border>

                    <!-- Filters Button -->
                    <Button Grid.Column="1"
                            Style="{StaticResource FilterButton}"
                            Click="FiltersButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="&#xE71C;"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="16"
                                       VerticalAlignment="Center"
                                       Margin="0,0,8,0" />
                            <TextBlock Text="Filters"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>
                </Grid>

                <!-- Vehicle Cards Grid -->
                <Grid>
                    <ItemsControl ItemsSource="{Binding VehiclesView}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource VehicleCard}"
                                        Width="280"
                                        MouseEnter="Card_MouseEnter"
                                        MouseLeave="Card_MouseLeave">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="200" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <!-- Vehicle Image -->
                                        <Border Grid.Row="0"
                                                CornerRadius="16,16,0,0"
                                                ClipToBounds="True"
                                                Background="#FF1E2235">
                                            <Grid>
                                                <Image Source="{Binding PrimaryPhotoUrl}"
                                                       Stretch="UniformToFill"
                                                       Visibility="{Binding HasPrimaryPhoto, Converter={StaticResource BooleanToVisibilityConverter}}" />

                                                <!-- No Photo Placeholder -->
                                                <StackPanel VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"
                                                           Visibility="{Binding HasPrimaryPhoto, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                                    <TextBlock Text="&#xEB9F;"
                                                               FontFamily="Segoe MDL2 Assets"
                                                               FontSize="32"
                                                               Foreground="#FF4B5563"
                                                               HorizontalAlignment="Center"
                                                               Margin="0,0,0,8" />
                                                    <TextBlock Text="No image"
                                                               FontSize="12"
                                                               Foreground="#FF6B7280"
                                                               HorizontalAlignment="Center" />
                                                </StackPanel>
                                            </Grid>
                                        </Border>

                                        <!-- Vehicle Info -->
                                        <StackPanel Grid.Row="1">
                                            <!-- Title and Subtitle -->
                                            <TextBlock Text="{Binding DisplayName}"
                                                       FontSize="18"
                                                       FontWeight="SemiBold"
                                                       Foreground="White"
                                                       TextTrimming="CharacterEllipsis" />

                                            <TextBlock Text="{Binding Subtitle}"
                                                       FontSize="13"
                                                       Foreground="#FF9BA3B4"
                                                       Margin="0,4,0,0"
                                                       TextTrimming="CharacterEllipsis" />

                                            <!-- Icons Row -->
                                            <Grid Margin="0,16,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>

                                                <!-- Seats -->
                                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                    <TextBlock Text="&#xE7C4;"
                                                               FontFamily="Segoe MDL2 Assets"
                                                               FontSize="14"
                                                               Foreground="#FF6B7280"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,4,0" />
                                                    <TextBlock Text="{Binding Seats}"
                                                               FontSize="13"
                                                               Foreground="#FF9BA3B4"
                                                               VerticalAlignment="Center" />
                                                </StackPanel>

                                                <!-- Transmission -->
                                                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <TextBlock Text="&#xE7C8;"
                                                               FontFamily="Segoe MDL2 Assets"
                                                               FontSize="14"
                                                               Foreground="#FF6B7280"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,4,0" />
                                                    <TextBlock Text="{Binding TransmissionDisplay}"
                                                               FontSize="13"
                                                               Foreground="#FF9BA3B4"
                                                               VerticalAlignment="Center" />
                                                </StackPanel>

                                                <!-- Fuel -->
                                                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                                    <TextBlock Text="&#xE7C7;"
                                                               FontFamily="Segoe MDL2 Assets"
                                                               FontSize="14"
                                                               Foreground="#FF6B7280"
                                                               VerticalAlignment="Center"
                                                               Margin="0,0,4,0" />
                                                    <TextBlock Text="{Binding FuelDisplay}"
                                                               FontSize="13"
                                                               Foreground="#FF9BA3B4"
                                                               VerticalAlignment="Center" />
                                                </StackPanel>
                                            </Grid>

                                            <!-- Price and Button -->
                                            <Grid Margin="0,20,0,0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="Auto" />
                                                </Grid.RowDefinitions>

                                                <!-- Price -->
                                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                                                    <TextBlock Text="{Binding DailyRateDisplay}"
                                                               FontSize="24"
                                                               FontWeight="Bold"
                                                               Foreground="#FF4F6EFF"
                                                               VerticalAlignment="Bottom" />
                                                    <TextBlock Text="per day"
                                                               FontSize="12"
                                                               Foreground="#FF6B7280"
                                                               VerticalAlignment="Bottom"
                                                               Margin="6,0,0,4" />
                                                </StackPanel>

                                                <!-- View Details Button -->
                                                <Button Grid.Row="1"
                                                        Content="View Details"
                                                        Style="{StaticResource ModernButton}"
                                                        HorizontalAlignment="Stretch"
                                                        Height="50"
                                                        Command="{Binding DataContext.ShowDetailsCommand, ElementName=RootVehicleList}"
                                                        CommandParameter="{Binding}" />
                                            </Grid>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Loading Indicator -->
                    <Border Background="#DD1A1D2E"
                            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                            CornerRadius="16">
                        <Border Background="#FF252941"
                                CornerRadius="16"
                                Padding="40"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                            <StackPanel>
                                <TextBlock Text="Loading vehicles..."
                                           FontSize="18"
                                           Foreground="White"
                                           HorizontalAlignment="Center" />
                            </StackPanel>
                        </Border>
                    </Border>

                    <!-- Empty State -->
                    <StackPanel HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="0,60,0,0">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding IsLoading}" Value="False" />
                                            <Condition Binding="{Binding Vehicles.Count}" Value="0" />
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible" />
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <TextBlock Text="&#xE7C5;"
                                   FontFamily="Segoe MDL2 Assets"
                                   FontSize="48"
                                   Foreground="#FF4B5563"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,16" />
                        <TextBlock Text="No vehicles found"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   HorizontalAlignment="Center" />
                        <TextBlock Text="Try adjusting your search or filters"
                                   FontSize="14"
                                   Foreground="#FF6B7280"
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0" />
                    </StackPanel>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- Filter Sidebar (Initially Hidden) -->
        <Border x:Name="FilterSidebar"
                Grid.Column="1"
                Background="#FF1E2235"
                Width="340"
                Visibility="Collapsed">
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Margin="0,0,0,24">
                    <TextBlock Text="Filter Vehicles"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center" />
                    <Button Content="&#xE711;"
                            FontFamily="Segoe MDL2 Assets"
                            HorizontalAlignment="Right"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#FF9BA3B4"
                            FontSize="16"
                            Cursor="Hand"
                            Click="CloseFilters_Click" />
                </Grid>

                <!-- Filter Options -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Vehicle Type -->
                        <TextBlock Text="Vehicle Type"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#FF9BA3B4"
                                   Margin="0,0,0,12" />
                        <ComboBox ItemsSource="{Binding VehicleTypes}"
                                  SelectedItem="{Binding SelectedVehicleType, Mode=TwoWay}"
                                  Background="#FF252941"
                                  Foreground="White"
                                  BorderThickness="0"
                                  Padding="16,12"
                                  FontSize="14"
                                  Margin="0,0,0,24" />

                        <!-- Transmission -->
                        <TextBlock Text="Transmission"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#FF9BA3B4"
                                   Margin="0,0,0,12" />
                        <ComboBox ItemsSource="{Binding TransmissionOptions}"
                                  SelectedItem="{Binding SelectedTransmission, Mode=TwoWay}"
                                  Background="#FF252941"
                                  Foreground="White"
                                  BorderThickness="0"
                                  Padding="16,12"
                                  FontSize="14"
                                  Margin="0,0,0,24" />

                        <!-- Price Range -->
                        <TextBlock Text="Price Range (per day)"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#FF9BA3B4"
                                   Margin="0,0,0,12" />
                        <ComboBox ItemsSource="{Binding PriceRanges}"
                                  SelectedItem="{Binding SelectedPriceRange, Mode=TwoWay}"
                                  DisplayMemberPath="DisplayName"
                                  Background="#FF252941"
                                  Foreground="White"
                                  BorderThickness="0"
                                  Padding="16,12"
                                  FontSize="14"
                                  Margin="0,0,0,24" />

                        <!-- Sort By -->
                        <TextBlock Text="Sort By"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#FF9BA3B4"
                                   Margin="0,0,0,12" />
                        <ComboBox ItemsSource="{Binding SortOptions}"
                                  SelectedItem="{Binding SelectedSortOption, Mode=TwoWay}"
                                  DisplayMemberPath="DisplayName"
                                  Background="#FF252941"
                                  Foreground="White"
                                  BorderThickness="0"
                                  Padding="16,12"
                                  FontSize="14" />
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
