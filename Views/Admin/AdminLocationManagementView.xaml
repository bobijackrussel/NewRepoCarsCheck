<UserControl x:Class="CarRentalManagment.Views.Admin.AdminLocationManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="900"
             d:DesignWidth="1400">
    <Grid Background="{DynamicResource PageBackgroundBrush}">
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="32">
            <StackPanel>
                <StackPanel>
                    <TextBlock Text="{Binding Title}"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextPrimaryBrush}" />
                    <TextBlock Text="{Binding Description}"
                               FontSize="16"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               TextWrapping="Wrap"
                               Margin="0,8,0,0" />
                </StackPanel>

                <ItemsControl ItemsSource="{Binding Locations}" Margin="0,24,0,0">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel ItemWidth="360" ItemHeight="180" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{DynamicResource ModernCard}"
                                    Padding="24"
                                    Margin="0,0,16,16"
                                    Width="344"
                                    Height="170">
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}"
                                               FontSize="20"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}" />
                                    <TextBlock Text="{Binding Subtitle}"
                                               FontSize="13"
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               Margin="0,4,0,16" />
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{DynamicResource Admin_Summary_TotalVehicles}"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                                            <TextBlock Text="{Binding FleetCount}"
                                                       FontSize="18"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{DynamicResource Admin_Summary_Utilization}"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                                            <Border Background="{DynamicResource SidebarAccentBrush}"
                                                    CornerRadius="{DynamicResource CornerRadiusMedium}"
                                                    Padding="6,4"
                                                    HorizontalAlignment="Left"
                                                    Margin="0,4,0,0">
                                                <TextBlock Text="{Binding UtilizationDisplay}"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource TextPrimaryBrush}" />
                                            </Border>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Border Background="{DynamicResource MutedBackgroundBrush}"
                        CornerRadius="{DynamicResource CornerRadiusMedium}"
                        Padding="24"
                        HorizontalAlignment="Stretch"
                        Margin="0,24,0,0">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Locations.Count}" Value="0">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock Text="{DynamicResource Admin_Locations_Empty}"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               FontSize="14" />
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
