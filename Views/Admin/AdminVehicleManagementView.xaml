<UserControl x:Class="CarRentalManagment.Views.Admin.AdminVehicleManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:CarRentalManagment.Utilities.Converters"
             mc:Ignorable="d"
             d:DesignHeight="900"
             d:DesignWidth="1400">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <conv:StringNullOrEmptyToVisibilityConverter x:Key="StringNullToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Background="{DynamicResource PageBackgroundBrush}">
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="32">
            <StackPanel>
                <StackPanel>
                    <TextBlock Text="{Binding Title}"
                               FontSize="32"
                               FontWeight="Bold"
                               Foreground="{DynamicResource TextPrimaryBrush}" />
                    <TextBlock Text="{Binding Description}"
                               FontSize="16"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               TextWrapping="Wrap"
                               Margin="0,8,0,0" />
                </StackPanel>

                <StackPanel Margin="0,24,0,0" Spacing="24">
                    <Border Style="{DynamicResource ModernCard}" Padding="24">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Border Background="{DynamicResource PrimaryGradientBrush}"
                                        CornerRadius="{DynamicResource CornerRadiusMedium}"
                                        Padding="12"
                                        Width="48"
                                        Height="48">
                                    <TextBlock Text="&#xECAD;"
                                               FontFamily="Segoe MDL2 Assets"
                                               FontSize="20"
                                               Foreground="{DynamicResource PrimaryForegroundBrush}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center" />
                                </Border>
                                <StackPanel Margin="12,0,0,0">
                                    <TextBlock Text="{DynamicResource Admin_Summary_TotalVehicles}"
                                               Foreground="{DynamicResource TextSecondaryBrush}" />
                                    <TextBlock Text="{Binding Vehicles.Count}"
                                               FontSize="20"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource TextPrimaryBrush}" />
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Spacing="12">
                                <Button Command="{Binding AddVehicleCommand}"
                                        Style="{StaticResource ModernPrimaryButton}">
                                    <StackPanel Orientation="Horizontal" Spacing="8">
                                        <TextBlock Text="&#xE710;"
                                                   FontFamily="Segoe MDL2 Assets"
                                                   FontSize="14" />
                                        <TextBlock Text="Add vehicle" />
                                    </StackPanel>
                                </Button>
                                <Button Content="{DynamicResource Admin_Action_Refresh}"
                                        Command="{Binding RefreshCommand}"
                                        Style="{StaticResource ModernOutlineButton}" />
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Style="{DynamicResource ModernCard}" Padding="0">
                        <Grid>
                            <ScrollViewer VerticalScrollBarVisibility="Hidden">
                                <ItemsControl ItemsSource="{Binding Vehicles}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemContainerStyle>
                                        <Style TargetType="ContentPresenter">
                                            <Setter Property="Margin" Value="0,0,0,12" />
                                        </Style>
                                    </ItemsControl.ItemContainerStyle>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{DynamicResource CardBackgroundBrush}"
                                                    CornerRadius="{DynamicResource CornerRadiusMedium}"
                                                    Padding="24"
                                                    BorderBrush="{DynamicResource DividerBrush}"
                                                    BorderThickness="1">
                                                <StackPanel>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>

                                                        <StackPanel>
                                                            <TextBlock Text="{Binding Name}"
                                                                       FontSize="20"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                                                            <TextBlock Text="{Binding TypeDisplay}"
                                                                       Margin="0,4,0,0"
                                                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                                                            <TextBlock Text="{Binding RatePerDayDisplay}"
                                                                       Margin="0,12,0,0"
                                                                       FontSize="16"
                                                                       FontWeight="SemiBold"
                                                                       Foreground="{DynamicResource PrimaryBrush}" />
                                                        </StackPanel>

                                                        <Border Grid.Column="1"
                                                                HorizontalAlignment="Right"
                                                                Background="{DynamicResource SidebarAccentBrush}"
                                                                CornerRadius="{DynamicResource CornerRadiusMedium}"
                                                                Padding="12,4">
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Setter Property="Background" Value="{DynamicResource SidebarAccentBrush}" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Active">
                                                                            <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Maintenance">
                                                                            <Setter Property="Background" Value="{DynamicResource WarningBrush}" />
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Status}" Value="Retired">
                                                                            <Setter Property="Background" Value="{DynamicResource DestructiveBrush}" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                            <TextBlock Text="{Binding StatusDisplay}"
                                                                       FontWeight="SemiBold">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}" />
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding Status}" Value="Active">
                                                                                <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}" />
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Status}" Value="Maintenance">
                                                                                <Setter Property="Foreground" Value="{DynamicResource PrimaryForegroundBrush}" />
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Status}" Value="Retired">
                                                                                <Setter Property="Foreground" Value="{DynamicResource DestructiveForegroundBrush}" />
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </Border>
                                                    </Grid>

                                                    <Grid Margin="0,20,0,0">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>

                                                        <StackPanel Grid.Column="0">
                                                            <TextBlock Text="Fuel type"
                                                                       FontSize="12"
                                                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                                                            <TextBlock Text="{Binding Fuel}"
                                                                       FontSize="16"
                                                                       FontWeight="SemiBold" />
                                                        </StackPanel>

                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock Text="Seats"
                                                                       FontSize="12"
                                                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                                                            <TextBlock Text="{Binding Seats}"
                                                                       FontSize="16"
                                                                       FontWeight="SemiBold" />
                                                        </StackPanel>

                                                        <StackPanel Grid.Column="2">
                                                            <TextBlock Text="Last updated"
                                                                       FontSize="12"
                                                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                                                            <TextBlock Text="{Binding LastUpdatedDisplay}"
                                                                       FontSize="16"
                                                                       FontWeight="SemiBold" />
                                                        </StackPanel>
                                                    </Grid>

                                                    <TextBlock Text="{Binding Description}"
                                                               Margin="0,16,0,0"
                                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                                               TextWrapping="Wrap"
                                                               Visibility="{Binding Description, Converter={StaticResource StringNullToVisibilityConverter}}" />

                                                    <StackPanel Orientation="Horizontal"
                                                                HorizontalAlignment="Right"
                                                                Margin="0,20,0,0"
                                                                Spacing="12">
                                                        <Button Content="{Binding AvailabilityActionText}"
                                                                Command="{Binding DataContext.ToggleAvailabilityCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                CommandParameter="{Binding}"
                                                                Style="{StaticResource ModernOutlineButton}" />
                                                        <Button Content="&#xE70F;"
                                                                ToolTip="Edit vehicle"
                                                                FontFamily="Segoe MDL2 Assets"
                                                                Command="{Binding DataContext.EditVehicleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                CommandParameter="{Binding}"
                                                                Style="{StaticResource IconButtonStyle}" />
                                                        <Button Content="&#xE74D;"
                                                                ToolTip="Delete vehicle"
                                                                FontFamily="Segoe MDL2 Assets"
                                                                Foreground="{DynamicResource DestructiveBrush}"
                                                                Command="{Binding DataContext.DeleteVehicleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                CommandParameter="{Binding}"
                                                                Style="{StaticResource IconButtonStyle}" />
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>

                            <Border Background="{DynamicResource OverlayBrush}"
                                    Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    CornerRadius="{DynamicResource CornerRadiusLarge}">
                                <Border Background="{DynamicResource CardBackgroundBrush}"
                                        CornerRadius="{DynamicResource CornerRadiusLarge}"
                                        Padding="32"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="Loading..."
                                               Foreground="{DynamicResource TextSecondaryBrush}"
                                               FontSize="16" />
                                </Border>
                            </Border>
                        </Grid>
                    </Border>

                    <Border Background="{DynamicResource DestructiveBrush}"
                            CornerRadius="{DynamicResource CornerRadiusMedium}"
                            Padding="12"
                            Visibility="{Binding ErrorMessage, Converter={StaticResource StringNullToVisibilityConverter}}">
                        <TextBlock Text="{Binding ErrorMessage}"
                                   Foreground="{DynamicResource DestructiveForegroundBrush}"
                                   FontWeight="SemiBold" />
                    </Border>

                    <Border Background="{DynamicResource MutedBackgroundBrush}"
                            CornerRadius="{DynamicResource CornerRadiusMedium}"
                            Padding="24"
                            HorizontalAlignment="Stretch">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Vehicles.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Text="{DynamicResource Admin_Table_NoData}"
                                   HorizontalAlignment="Center"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   FontSize="14" />
                    </Border>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
