<UserControl x:Class="CarRentalManagment.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:behaviors="clr-namespace:CarRentalManagment.Utilities.Behaviors"
             xmlns:converters="clr-namespace:CarRentalManagment.Utilities.Converters"
             xmlns:viewModels="clr-namespace:CarRentalManagment.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewModels:LoginViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:StringNullOrEmptyToVisibilityConverter x:Key="StringNullOrEmptyToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Background="#1e1e2f">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Branding -->
        <Border Grid.Column="0"
                Background="#24243e"
                Padding="40">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Car Rental Management"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="White"
                           TextWrapping="Wrap" />
                <TextBlock Text="Manage your fleet, reservations, and customers with ease."
                           FontSize="14"
                           Foreground="#cfcfe0"
                           TextWrapping="Wrap"
                           Margin="0,16,0,0" />
                <TextBlock Text="Sign in to access your dashboard."
                           FontSize="13"
                           Foreground="#9a9ab5"
                           Margin="0,8,0,0" />
            </StackPanel>
        </Border>

        <!-- Right Panel - Login Form -->
        <Border Grid.Column="1"
                Background="White"
                CornerRadius="20,0,0,20"
                Margin="0,30,30,30"
                Padding="40">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0">
                    <TextBlock Text="Welcome Back"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#262645" />
                    <TextBlock Text="Please sign in to continue"
                               FontSize="14"
                               Foreground="#6b6b8a"
                               Margin="0,4,0,0" />
                </StackPanel>

                <!-- Form -->
                <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="0,20,0,20">
                    <!-- Email Field -->
                    <TextBlock Text="Email"
                               Foreground="#555"
                               Margin="0,0,0,4" />
                    <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                             MinWidth="220"
                             Padding="8"
                             Style="{StaticResource RoundedTextBoxStyle}"
                             Margin="0,0,0,16" />

                    <!-- Password Field -->
                    <TextBlock Text="Password"
                               Foreground="#555"
                               Margin="0,0,0,4" />
                    <PasswordBox Padding="8"
                                 Style="{StaticResource RoundedPasswordBoxStyle}"
                                 behaviors:PasswordBoxHelper.BindPassword="True"
                                 behaviors:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay}"
                                 Margin="0,0,0,16" />

                    <!-- Error Message -->
                    <TextBlock Text="{Binding ErrorMessage}"
                               Foreground="#d64545"
                               TextWrapping="Wrap"
                               Margin="0,0,0,16">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ErrorMessage, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}" Value="Visible">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- Login Button -->
                    <Button Content="Sign In"
                            Command="{Binding LoginCommand}"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Height="40"
                            FontSize="14"
                            FontWeight="SemiBold" />

                    <!-- Loading Indicator -->
                    <TextBlock Text="Signing in..."
                               Foreground="#4e63ff"
                               HorizontalAlignment="Center"
                               Margin="0,12,0,0"
                               Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" />
                </StackPanel>

                <!-- Footer -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="Don't have an account?"
                               Foreground="#6b6b8a"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0" />
                    <Button Content="Sign Up"
                            Command="{Binding NavigateToSignUpCommand}"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Padding="12,6" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
