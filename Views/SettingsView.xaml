<UserControl x:Class="CarRentalManagment.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:CarRentalManagment.Utilities.Converters"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="1100">

    <UserControl.Resources>
        <conv:StringNullOrEmptyToVisibilityConverter x:Key="StringNullToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Background="{DynamicResource PageBackgroundBrush}">
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      Padding="32">
            <StackPanel>
                <TextBlock Text="{Binding Title}"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="{DynamicResource TextPrimaryBrush}" />
                <TextBlock Text="{Binding Description}"
                           FontSize="16"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           TextWrapping="Wrap"
                           Margin="0,8,0,24" />

                <Border Style="{StaticResource ModernCard}"
                        Padding="24"
                        Margin="0,0,0,20">
                    <StackPanel Orientation="Horizontal">
                        <Border Width="72"
                                Height="72"
                                Background="{DynamicResource SidebarAccentBrush}"
                                CornerRadius="36"
                                VerticalAlignment="Top">
                            <TextBlock Text="{Binding DisplayName}"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       TextAlignment="Center"
                                       TextWrapping="Wrap"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="{DynamicResource PrimaryBrush}" />
                        </Border>

                        <StackPanel Margin="20,0,0,0">
                            <TextBlock Text="{Binding DisplayName}"
                                       FontSize="20"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="{Binding Email}"
                                       Margin="0,6,0,0"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                            <TextBlock Text="{Binding Username, StringFormat=Username: {0}}"
                                       Margin="0,4,0,0"
                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource ModernCard}"
                        Padding="24"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Appearance"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}" />
                        <TextBlock Text="Customize how the app looks"
                                   FontSize="13"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Margin="0,4,0,16" />

                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <CheckBox Content="Use dark theme"
                                      IsChecked="{Binding IsDarkTheme, Mode=TwoWay}"
                                      Foreground="{DynamicResource TextPrimaryBrush}" />
                            <TextBlock Text="{Binding SelectedTheme, StringFormat=Current: {0}}"
                                       Margin="16,0,0,0"
                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                       VerticalAlignment="Center" />
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource ModernCard}"
                        Padding="24"
                        Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="Language"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}" />
                        <TextBlock Text="Choose your preferred language"
                                   FontSize="13"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   Margin="0,4,0,16" />
                        <ComboBox ItemsSource="{Binding Languages}"
                                  SelectedItem="{Binding SelectedLanguage, Mode=TwoWay}"
                                  DisplayMemberPath="DisplayName"
                                  Style="{StaticResource ModernComboBox}"
                                  Width="220" />
                    </StackPanel>
                </Border>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <TextBlock Text="{Binding StatusMessage}"
                               Foreground="{DynamicResource SuccessBrush}"
                               Visibility="{Binding StatusMessage, Converter={StaticResource StringNullToVisibilityConverter}}"
                               VerticalAlignment="Center" />
                    <TextBlock Text="{Binding ErrorMessage}"
                               Foreground="{DynamicResource DestructiveBrush}"
                               Visibility="{Binding ErrorMessage, Converter={StaticResource StringNullToVisibilityConverter}}"
                               Margin="16,0,0,0"
                               VerticalAlignment="Center" />
                    <Button Content="Save changes"
                            Command="{Binding SaveCommand}"
                            Style="{StaticResource ModernPrimaryButton}"
                            Margin="16,0,0,0" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

