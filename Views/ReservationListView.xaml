<UserControl x:Class="CarRentalManagment.Views.ReservationListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:CarRentalManagment.Utilities.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="900">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:StringNullOrEmptyToVisibilityConverter x:Key="StringNullOrEmptyToVisibilityConverter" />

        <Style x:Key="ReservationStatusBadgeStyle" TargetType="Border">
            <Setter Property="Padding" Value="10,4" />
            <Setter Property="CornerRadius" Value="{DynamicResource CornerRadiusMedium}" />
            <Setter Property="Background" Value="{DynamicResource SidebarAccentBrush}" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding Status}" Value="Confirmed">
                    <Setter Property="Background" Value="{DynamicResource SuccessBrush}" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                    <Setter Property="Background" Value="{DynamicResource DestructiveBrush}" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Completed">
                    <Setter Property="Background" Value="{DynamicResource PrimaryBrush}" />
                </DataTrigger>
                <DataTrigger Binding="{Binding Status}" Value="Pending">
                    <Setter Property="Background" Value="{DynamicResource WarningBrush}" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Filters and actions -->
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    Margin="0,0,0,12">
            <ComboBox ItemsSource="{Binding Filters}"
                      SelectedItem="{Binding SelectedFilter}"
                      DisplayMemberPath="DisplayName"
                      Width="180"
                      Style="{StaticResource ModernComboBox}"
                      Margin="0,0,12,0" />
            <Button Content="Refresh"
                    Command="{Binding RefreshCommand}"
                    Style="{StaticResource ModernOutlineButton}" />
            <StackPanel Orientation="Horizontal"
                        Margin="16,0,0,0"
                        VerticalAlignment="Center"
                        Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ProgressBar Width="140"
                             Height="4"
                             IsIndeterminate="True" />
                <TextBlock Text="Loading reservations..."
                           Margin="8,0,0,0"
                           Foreground="{DynamicResource TextSecondaryBrush}"
                           VerticalAlignment="Center" />
            </StackPanel>
        </StackPanel>

        <TextBlock Grid.Row="1"
                   Text="{Binding ErrorMessage}"
                   Foreground="{DynamicResource DestructiveBrush}"
                   TextWrapping="Wrap"
                   Visibility="{Binding ErrorMessage, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"
                   Margin="0,0,0,12" />

        <!-- Reservation cards -->
        <Grid Grid.Row="2">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Reservations}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource ModernCard}"
                                    Padding="24"
                                    Margin="0,0,0,16">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!-- Header -->
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding VehicleDisplayName}"
                                                       FontSize="18"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource TextPrimaryBrush}" />
                                            <TextBlock Text="{Binding Id, StringFormat=Reservation #{0}}"
                                                       Margin="0,4,0,0"
                                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                                        </StackPanel>

                                        <Border Grid.Column="1"
                                                Style="{StaticResource ReservationStatusBadgeStyle}">
                                            <TextBlock Text="{Binding StatusDisplay}"
                                                       FontSize="12"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource PrimaryForegroundBrush}" />
                                        </Border>
                                    </Grid>

                                    <!-- Details -->
                                    <Grid Grid.Row="1"
                                          Margin="0,20,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Rental period"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                                            <TextBlock Text="{Binding DateRangeDisplay}"
                                                       FontSize="14"
                                                       FontWeight="SemiBold" />
                                        </StackPanel>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="Total amount"
                                                       FontSize="12"
                                                       Foreground="{DynamicResource TextSecondaryBrush}" />
                                            <TextBlock Text="{Binding TotalAmountDisplay}"
                                                       FontSize="18"
                                                       FontWeight="Bold"
                                                       Foreground="{DynamicResource PrimaryBrush}" />
                                        </StackPanel>
                                    </Grid>

                                    <!-- Notes and actions -->
                                    <StackPanel Grid.Row="2"
                                                Margin="0,20,0,0">
                                        <TextBlock Text="{Binding Notes}"
                                                   TextWrapping="Wrap"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   Visibility="{Binding Notes, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}" />

                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0,12,0,0"
                                                    Visibility="{Binding CancellationReason, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}">
                                            <TextBlock Text="Cancellation reason:"
                                                       Foreground="{DynamicResource DestructiveBrush}"
                                                       FontWeight="SemiBold"
                                                       Margin="0,0,8,0" />
                                            <TextBlock Text="{Binding CancellationReason}"
                                                       Foreground="{DynamicResource DestructiveBrush}" />
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0,16,0,0">
                                            <Button Content="Cancel reservation"
                                                    Style="{StaticResource ModernOutlineButton}"
                                                    Command="{Binding DataContext.CancelReservationCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Visibility="{Binding CanCancel, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                            <TextBlock Text="Cancelling..."
                                                       Margin="12,0,0,0"
                                                       VerticalAlignment="Center"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                       Visibility="{Binding IsCancelling, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Empty state -->
            <Border Background="White"
                    BorderBrush="#FFE1E5FB"
                    BorderThickness="1"
                    CornerRadius="16"
                    Padding="32"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="360"
                    Visibility="{Binding IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Panel.ZIndex="1">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="No reservations yet"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               HorizontalAlignment="Center" />
                    <TextBlock Text="Create a reservation to see it listed here."
                               Margin="0,8,0,0"
                               FontSize="13"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               TextAlignment="Center" />
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>


