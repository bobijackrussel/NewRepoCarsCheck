<UserControl x:Class="CarRentalManagment.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="768"
             d:DesignWidth="1366">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <DataTemplate x:Key="SidebarMenuItemTemplate">
            <ToggleButton Style="{StaticResource SidebarMenuButtonStyle}"
                          IsChecked="{Binding IsActive, Mode=OneWay}"
                          Margin="0,4,0,0"
                          Command="{Binding DataContext.NavigateCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                          CommandParameter="{Binding Key}">
                <Grid Margin="0,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="32" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{Binding IconGlyph}"
                               FontFamily="Segoe MDL2 Assets"
                               FontSize="16"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource SidebarForegroundBrush}"
                               HorizontalAlignment="Center" />
                    <TextBlock Grid.Column="1"
                               Text="{Binding Title}"
                               FontSize="14"
                               Foreground="{DynamicResource SidebarForegroundBrush}"
                               VerticalAlignment="Center"
                               Margin="8,0,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Visible" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding DataContext.IsMenuOpen, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>
            </ToggleButton>
        </DataTemplate>
    </UserControl.Resources>
    <Grid Background="{DynamicResource PageBackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0"
                Background="{DynamicResource SidebarBackgroundBrush}"
                BorderBrush="{DynamicResource SidebarBorderBrush}"
                BorderThickness="0,0,1,0">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Width" Value="288" />
                    <Setter Property="Padding" Value="24" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsMenuOpen}" Value="False">
                            <Setter Property="Width" Value="96" />
                            <Setter Property="Padding" Value="24,24,16,24" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <DockPanel LastChildFill="True">
                <!-- Brand -->
                <StackPanel DockPanel.Dock="Top" Margin="0,0,0,24">
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="0,0,0,24">
                        <Border Width="40"
                                Height="40"
                                CornerRadius="12"
                                Background="{DynamicResource PrimaryGradientBrush}">
                            <TextBlock Text="&#xECAD;"
                                       FontFamily="Segoe MDL2 Assets"
                                       FontSize="18"
                                       Foreground="{DynamicResource PrimaryForegroundBrush}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                        </Border>
                        <TextBlock Text="CarRental"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource SidebarForegroundBrush}"
                                   VerticalAlignment="Center"
                                   Margin="12,0,0,0">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMenuOpen}" Value="False">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                    <TextBlock Text="{Binding WelcomeMessage}"
                               FontSize="13"
                               Foreground="{DynamicResource SidebarForegroundBrush}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Visible" />
                                <Setter Property="Opacity" Value="0.75" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMenuOpen}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <!-- Footer actions -->
                <StackPanel DockPanel.Dock="Bottom" Margin="0,24,0,0">
                    <Separator Margin="0,12" Background="{DynamicResource SidebarBorderBrush}" Height="1" />
                    <Button Content="{DynamicResource Navigation_Logout}"
                            Command="{Binding LogoutCommand}"
                            Style="{StaticResource ModernOutlineButton}"
                            HorizontalAlignment="Stretch" />
                </StackPanel>

                <!-- Navigation -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Navigation_Menu}"
                                   FontSize="12"
                                   Margin="0,0,0,8"
                                   Foreground="{DynamicResource SidebarForegroundBrush}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Visible" />
                                    <Setter Property="Opacity" Value="0.6" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMenuOpen}" Value="False">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <ItemsControl ItemsSource="{Binding PrimaryMenuItems}"
                                      ItemTemplate="{StaticResource SidebarMenuItemTemplate}" />

                        <StackPanel Margin="0,24,0,0">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasAdminItems}" Value="True">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <TextBlock Text="{DynamicResource Navigation_Admin}"
                                       FontSize="12"
                                       Margin="0,0,0,8"
                                       Foreground="{DynamicResource SidebarForegroundBrush}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Visible" />
                                        <Setter Property="Opacity" Value="0.6" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsMenuOpen}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <ItemsControl ItemsSource="{Binding AdminMenuItems}"
                                          ItemTemplate="{StaticResource SidebarMenuItemTemplate}" />
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </DockPanel>
        </Border>

        <!-- Main content area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Top navigation bar -->
            <Border Grid.Row="0"
                    Background="{DynamicResource NavbarBackgroundBrush}"
                    BorderBrush="{DynamicResource NavbarBorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="24,12"
                    Effect="{DynamicResource CardShadowEffect}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Content="&#xE700;"
                                Command="{Binding ToggleMenuCommand}"
                                Style="{StaticResource IconButtonStyle}"
                                Margin="0,0,12,0" />
                    </StackPanel>

                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <Border Width="32"
                                Height="32"
                                CornerRadius="10"
                                Background="{DynamicResource PrimaryGradientBrush}">
                            <TextBlock Text="&#xECAD;"
                                       FontFamily="Segoe MDL2 Assets"
                                       Foreground="{DynamicResource PrimaryForegroundBrush}"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Center" />
                        </Border>
                        <TextBlock Text="CarRental"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource ForegroundBrush}"
                                   Margin="12,0,0,0" />
                    </StackPanel>

                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                        <TextBlock Text="{Binding WelcomeMessage}"
                                   Foreground="{DynamicResource MutedForegroundBrush}"
                                   FontSize="14"
                                   TextTrimming="CharacterEllipsis"
                                   MaxWidth="200"
                                   Margin="0,0,12,0" />
                        <Button Content="{DynamicResource Navigation_Logout}"
                                Command="{Binding LogoutCommand}"
                                Style="{StaticResource ModernOutlineButton}" />
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Body -->
            <Border Grid.Row="1"
                    Background="{DynamicResource PageBackgroundBrush}"
                    Padding="32">
                <ContentControl Content="{Binding CurrentViewModel}" />
            </Border>
        </Grid>
    </Grid>
</UserControl>
