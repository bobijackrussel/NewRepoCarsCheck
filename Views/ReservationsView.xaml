<UserControl x:Class="CarRentalManagment.Views.ReservationsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:CarRentalManagment.Views"
             xmlns:converters="clr-namespace:CarRentalManagment.Utilities.Converters"
             mc:Ignorable="d"
             d:DesignHeight="700"
             d:DesignWidth="1100">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid Background="{DynamicResource PageBackgroundBrush}">
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      Padding="32">
            <StackPanel>
                <Grid Margin="0,0,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="{Binding Title}"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource TextPrimaryBrush}" />
                        <TextBlock Text="{Binding Description}"
                                   FontSize="16"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,8,0,0" />
                    </StackPanel>

                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center">
                        <Button Content="New reservation"
                                Command="{Binding CreateReservationCommand}"
                                Style="{StaticResource ModernPrimaryButton}"
                                Visibility="{Binding CanCreateReservation, Converter={StaticResource BooleanToVisibilityConverter}}" />
                        <Border Background="{DynamicResource CardAltBackgroundBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="{DynamicResource CornerRadiusMedium}"
                                Padding="12"
                                Margin="16,0,0,0"
                                Visibility="{Binding CanCreateReservation, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                            <TextBlock Text="Sign in to create reservations"
                                       Foreground="{DynamicResource DestructiveBrush}"
                                       FontWeight="SemiBold" />
                        </Border>
                    </StackPanel>
                </Grid>

                <Border Background="{DynamicResource CardBackgroundBrush}"
                        CornerRadius="{DynamicResource CornerRadiusLarge}"
                        Padding="24"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        Effect="{DynamicResource CardShadowEffect}">
                    <local:ReservationListView DataContext="{Binding ReservationList}" />
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
