<Window x:Class="CarRentalManagment.Views.CreateReservationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:CarRentalManagment.Utilities.Converters"
        mc:Ignorable="d"
        Title="Create reservation"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        Background="{StaticResource MutedBackgroundBrush}"
        d:DesignWidth="560"
        d:DesignHeight="640">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
        <converters:StringNullOrEmptyToVisibilityConverter x:Key="StringNullOrEmptyToVisibilityConverter" />
    </Window.Resources>

    <Border Background="White"
            CornerRadius="16"
            Padding="28"
            BorderBrush="#FFE1E5FB"
            BorderThickness="1">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Create a reservation"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="{StaticResource ForegroundBrush}" />
                <TextBlock Text="Choose a vehicle and select the dates for your rental."
                           Margin="0,6,0,20"
                           Foreground="{StaticResource MutedForegroundBrush}" />

                <StackPanel Margin="0,0,0,16"
                            Visibility="{Binding ShowVehicleSelector, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="Vehicle"
                               FontSize="12"
                               Foreground="{StaticResource MutedForegroundBrush}" />
                    <ComboBox ItemsSource="{Binding AvailableVehicles}"
                              SelectedItem="{Binding SelectedVehicle}"
                              DisplayMemberPath="DisplayName"
                              Style="{StaticResource ModernComboBox}" />
                </StackPanel>

                <StackPanel Margin="0,0,0,16"
                            Visibility="{Binding ShowVehicleSelector, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                    <TextBlock Text="Vehicle"
                               FontSize="12"
                               Foreground="{StaticResource MutedForegroundBrush}" />
                    <Border Background="#FFE7EAFF"
                            BorderBrush="#FFE1E5FB"
                            BorderThickness="1"
                            CornerRadius="12"
                            Padding="12">
                        <TextBlock Text="{Binding SelectedVehicle.DisplayName}"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource ForegroundBrush}" />
                    </Border>
                </StackPanel>

                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,12,0">
                        <TextBlock Text="Start date"
                                   FontSize="12"
                                   Foreground="{StaticResource MutedForegroundBrush}" />
                        <DatePicker SelectedDate="{Binding StartDate, Mode=TwoWay}"
                                     />
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="End date"
                                   FontSize="12"
                                   Foreground="{StaticResource MutedForegroundBrush}" />
                        <DatePicker SelectedDate="{Binding EndDate, Mode=TwoWay}"
                                     />
                    </StackPanel>
                </Grid>

                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Notes (optional)"
                               FontSize="12"
                               Foreground="{StaticResource MutedForegroundBrush}" />
                    <TextBox Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ModernTextBox}"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             Height="90" />
                </StackPanel>

                <Border Background="#FFF4F6FF"
                        BorderBrush="#FFE1E5FB"
                        BorderThickness="1"
                        CornerRadius="12"
                        Padding="16"
                        Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Daily rate"
                                       FontSize="12"
                                       Foreground="{StaticResource MutedForegroundBrush}" />
                            <TextBlock Text="{Binding VehicleRateDisplay}"
                                       FontSize="16"
                                       FontWeight="SemiBold" />
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Duration"
                                       FontSize="12"
                                       Foreground="{StaticResource MutedForegroundBrush}" />
                            <TextBlock Text="{Binding RentalDaysDisplay}"
                                       FontSize="16"
                                       FontWeight="SemiBold" />
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Total"
                                       FontSize="12"
                                       Foreground="{StaticResource MutedForegroundBrush}" />
                            <TextBlock Text="{Binding TotalAmountDisplay}"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource PrimaryBrush}" />
                        </StackPanel>
                    </Grid>
                </Border>

                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="#FFB42323"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"
                           TextWrapping="Wrap"
                           Margin="0,0,0,12" />

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Content="Cancel"
                            Command="{Binding CancelCommand}"
                            Style="{StaticResource ModernOutlineButton}" />
                    <Button Content="Reserve vehicle"
                            Command="{Binding SaveCommand}"
                            Style="{StaticResource ModernPrimaryButton}"
                            Margin="12,0,0,0" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>
